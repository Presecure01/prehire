# Server Configuration
BACKEND_PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/prehire

# Authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production
SESSION_SECRET=your_session_secret_change_this_in_production

# Email Service (choose one: smtp, sendgrid, mailgun)
EMAIL_SERVICE=smtp
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=PreHire

# SMTP Configuration (if using EMAIL_SERVICE=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (if using EMAIL_SERVICE=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun Configuration (if using EMAIL_SERVICE=mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domaines